  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().token) {",
          "    pm.collectionVariables.set('token', pm.response.json().token);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract quiz ID from quiz generation response",
          "if (pm.response && pm.response.json() && pm.response.json().quiz && pm.response.json().quiz.id) {",
          "    pm.collectionVariables.set('quizId', pm.response.json().quiz.id);",
          "}",
          "",
          "// Auto-extract question IDs from quiz generation response",
          "if (pm.response && pm.response.json() && pm.response.json().quiz && pm.response.json().quiz.questions) {",
          "    const questions = pm.response.json().quiz.questions;",
          "    if (questions.length > 0) pm.collectionVariables.set('questionId', questions[0].id);",
          "    if (questions.length > 1) pm.collectionVariables.set('questionId2', questions[1].id);",
          "    if (questions.length > 2) pm.collectionVariables.set('questionId3', questions[2].id);",
          "}"
        ]
      }
    }
  ]
