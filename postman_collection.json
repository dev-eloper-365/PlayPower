    {
      "name": "Quiz Management",
      "item": [
        {
          "name": "Generate Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/quiz/generate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "quiz", "generate"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grade\": 10,\n  \"Subject\": \"Mathematics\",\n  \"TotalQuestions\": 5,\n  \"MaxScore\": 10,\n  \"Difficulty\": \"MIX\",\n  \"Stream\": \"Science\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Generate a new quiz with AI-powered questions based on grade, subject, and difficulty."
          },
          "response": []
        },
        {
          "name": "Submit Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/quiz/submit",
              "host": ["{{baseUrl}}"],
              "path": ["api", "quiz", "submit"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quizId\": \"{{quizId}}\",\n  \"responses\": [\n    {\n      \"questionId\": \"{{questionId}}\",\n      \"userResponse\": \"A\"\n    },\n    {\n      \"questionId\": \"{{questionId2}}\",\n      \"userResponse\": \"B\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Submit quiz answers for evaluation and scoring."
          },
          "response": []
        },
        {
          "name": "Get Quiz History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/quiz/history?grade=10&subject=Mathematics&stream=Science&minMarks=0&maxMarks=100&from=2024-01-01&to=2024-12-31&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "quiz", "history"],
              "query": [
                {
                  "key": "grade",
                  "value": "10",
                  "description": "Filter by grade level"
                },
                {
                  "key": "subject",
                  "value": "Mathematics",
                  "description": "Filter by subject"
                },
                {
                  "key": "stream",
                  "value": "Science",
                  "description": "Filter by stream (for grades 11-12)"
                },
                {
                  "key": "minMarks",
                  "value": "0",
                  "description": "Minimum marks filter"
                },
                {
                  "key": "maxMarks",
                  "value": "100",
                  "description": "Maximum marks filter"
                },
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "description": "Start date (YYYY-MM-DD or DD/MM/YYYY)"
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "description": "End date (YYYY-MM-DD or DD/MM/YYYY)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number for pagination"
                },
                {
                  "key": "pageSize",
                  "value": "10",
                  "description": "Number of items per page"
                }
              ]
            },
            "description": "Retrieve quiz submission history with filtering and pagination options."
          },
          "response": []
        },
        {
          "name": "Retry Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/quiz/{{quizId}}/retry",
              "host": ["{{baseUrl}}"],
              "path": ["api", "quiz", "{{quizId}}", "retry"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"responses\": [\n    {\n      \"questionId\": \"{{questionId}}\",\n      \"userResponse\": \"C\"\n    },\n    {\n      \"questionId\": \"{{questionId2}}\",\n      \"userResponse\": \"D\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Retry a quiz with new answers for improved scoring."
          },
          "response": []
        },
        {
          "name": "Get Question Hint",
          "request": {
            "method": "POST",
